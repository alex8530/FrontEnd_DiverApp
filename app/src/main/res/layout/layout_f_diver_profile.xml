                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+966 55 555 5555"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:layout_marginRight="16dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رقم الجوال"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="#e5e5e5"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="100"
                    android:layout_marginTop="18dp"
                    >

                    <Button
                        android:id="@+id/button_resend"
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:text="خروج"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:background="@drawable/bk_button_shape4"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        />
                    <Button
                        android:id="@+id/button_edit"
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:text="تعديل ملفي الشخصي"
                        android:background="@drawable/bk_button_shape2"
                        android:layout_marginStart="10dp"
                        android:layout_weight="60"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="#ffffff"

                        />
                </LinearLayout>
            </LinearLayout>
            <!-- TODO But this has'nt a white bg !!...-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="37dp"
                android:layout_marginStart="37dp"
                >
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#1c608d"
                    android:gravity="end"
                    android:layout_marginTop="29dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:text="حجوزاتي"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="14dp"
                    android:background="#e5e5e5"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                </android.support.v7.widget.RecyclerView>
                <!--TODO this button maybe not needed!!  so ask lina!-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="إضافة رحلة جديدة"
                    android:background="@drawable/bk_button_shape"
                    android:padding="10dp"
                    android:layout_marginTop="15sp"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@drawable/button_text"
                    android:layout_marginBottom="31dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>





    </ScrollView>

</RelativeLayout>
