<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f5"
    tools:context=".Fragments.Diver_Profile">

    <!-- TODO GO DOWN...-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cons"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bk_button_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_basket"
                android:layout_marginRight="10dp"
                android:id="@+id/cart"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_categories"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_logo_internal"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:background="#f5f6f5"
        android:layout_width="match_parent"
        android:layout_below="@id/cons"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TODO the next linearlayout has a white bg...-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="37dp"
                android:layout_marginTop="37dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"

                android:background="@drawable/white_bg_radius"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"

                            android:textStyle="bold"
                            android:text="خالد محمد محمد"
                            android:textColor="#1c608d"/>

                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#2980ba"
                            android:textStyle="bold"
                            android:text="غواص"
                            android:layout_marginTop="6dp"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#2980ba"
                            android:textStyle="bold"
                            android:text="Khaled@email.com"
                            android:layout_marginTop="1dp"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="ترقية إلى محترف الغوص"
                            android:textSize="9sp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/bk_button_shape3"
                            tools:ignore="SmallSp"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_marginTop="6dp"
                            />

                    </LinearLayout>
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_gravity="right"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/profile_iimg"
                        />
                    <!--app:civ_border_color="#FF000000"-->

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="14dp"
                    android:background="#e5e5e5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView  android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملفي الشخصي"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#154968"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="349879990003"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:layout_marginRight="16dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رخصة الغوص"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عميقة"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:layout_marginRight="16dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مستوى الرخصة"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/"
                            android:textSize="9sp"
                            android:textColor="#909090"
                            android:layout_marginRight="0dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:layout_marginRight="53dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التقييم"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1991.12.03"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:layout_marginRight="16dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تاريخ الميلاد"
                            android:textSize="12sp"
                            android:textColor="#909090"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
