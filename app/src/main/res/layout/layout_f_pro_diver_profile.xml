<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f5"
    tools:context=".Fragments.ProDiver_Profile">


    <!-- TODO Alex ... this layout have to be edited , go to layout_f_diver_profile.xml for more details -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cons"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bk_button_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_basket"
                android:layout_marginRight="10dp"
                android:id="@+id/cart"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_categories"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_logo_internal"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:background="#f5f6f5"
        android:layout_width="match_parent"
        android:layout_below="@id/cons"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="37dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"

                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"

                        android:textStyle="bold"
                        android:text="خالد محمد محمد"
                        android:textColor="#1c608d"/>

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#2980ba"
                        android:textStyle="bold"
                        android:text="مُحترف الغوص"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#2980ba"
                        android:textStyle="bold"
                        android:text="Khaled@email.com"
                        />

                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_gravity="right"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/profile_iimg"
                    />
                <!--app:civ_border_color="#FF000000"-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView  android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ملفي الشخصي"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#909090"/>


                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="349879990003"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رخصة الغوص"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عميقة"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مستوى الرخصة"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/"
                        android:textSize="9sp"
                        android:textColor="#909090"
                        android:layout_marginRight="0dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:layout_marginRight="53dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="التقييم"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1991.12.03"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تاريخ الميلاد"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+966 55 555 5555"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="رقم الجوال"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:text="رصيدي"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#909090"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="31dp"
                        android:layout_marginRight="73dp"
                        android:background="@drawable/bk_button_shape3"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:gravity="center"
                        android:paddingLeft="16dp"

                        android:paddingRight="16dp"

                        android:text="شحن الرصيد"
                        android:id="@+id/btn_charch"
                         android:textColor="#ffffff"
                        android:textSize="13sp"

                        />
                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginRight="10dp"
                        android:text="ر.س"
                        android:textColor="#e67979"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="-210"
                        android:textColor="#e67979"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="100">

                <Button
                    android:id="@+id/button_resend"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:text="خروج"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:background="@drawable/bk_button_shape4"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    />
                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:text="تعديل ملفي الشخصي"
                    android:background="@drawable/bk_button_shape2"
                    android:layout_marginStart="10dp"
                    android:layout_weight="60"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#ffffff"

                    />
            </LinearLayout>
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#1c608d"
                android:gravity="end"
                android:layout_marginTop="29dp"
                android:textStyle="bold"

                android:text="رحلاتي"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e5e5e5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="لم تقم بإضافة رحلات غوص"
                android:textSize="15sp"
                android:textColor="#a3a3a3"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coral"
                android:layout_marginTop="22dp"
                android:layout_gravity="center"/>


            <Button
            android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إضافة رحلة جديدة"
                android:background="@drawable/bk_button_shape"
                android:padding="10dp"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@drawable/button_text"

                android:textSize="18sp"
                android:gravity="center"

                />


            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#1c608d"
                android:gravity="end"
                android:layout_marginTop="34dp"
                android:textStyle="bold"

                android:text="حجوزاتي"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e5e5e5"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
