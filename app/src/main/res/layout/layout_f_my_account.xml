<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Fragments.MyAccount">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:background="@drawable/tool_bar_bg"
        >
        <ImageView
            android:id="@+id/basket_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_basket"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_categories"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/basket_icon"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_back_btton_right"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:background="#f5f6f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="27dp"
            android:paddingEnd="37dp"
            android:paddingStart="37dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="45dp"
                android:paddingEnd="45dp"
                android:paddingTop="25dp"
                android:paddingBottom="40dp"
                android:background="@drawable/white_bg_radius"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رصيدي"
                    android:textSize="19sp"
                    android:textColor="#969696"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="11dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ر.س"
                        android:textSize="30sp"
                        android:textColor="#e67979"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-250"
                        android:textSize="30sp"
                        android:textColor="#e67979"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شحن الرصيد"
                android:textSize="19sp"
                android:textColor="#154968"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_gravity="right"
                android:layout_marginTop="36dp"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                >
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/spinner_bg_new"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:textAlignment="textEnd"
                    android:entries="@array/country_arrays"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_marginStart="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/pay1_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="36dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:src="@drawable/pay1"
                    android:layout_marginEnd="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شحن باستخدام بطاقة"
                    android:textSize="15sp"
                    android:textColor="#00abe8"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/pay2_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="11dp"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pay2"
                    android:layout_marginEnd="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شحن باستخدام بطاقة"
                    android:textSize="15sp"
                    android:textColor="#f79e1c"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/pay3_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="11dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:src="@drawable/pay4"
                    android:layout_marginEnd="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شحن باستخدام بطاقة"
                    android:textSize="15sp"
                    android:textColor="#003087"
                    android:id="@+id/btn_paypal"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>