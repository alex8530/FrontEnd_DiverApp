<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Fragments.SingleTripBooked">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:background="@drawable/tool_bar_bg"
        >
        <ImageView
            android:id="@+id/basket_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_basket"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_categories"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/basket_icon"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_back_btton_right"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:orientation="vertical"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رحلة غوص في البحر الأحمر"
                    android:textSize="17sp"
                    android:textColor="#1c608d"
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:layout_gravity="right"
                    android:layout_marginEnd="37dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، وصف قصير عن الرحلة وما تتضمنه من مميزات، "
                    android:textSize="13sp"
                    android:textColor="#909090"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:layout_gravity="right"
                    android:layout_marginEnd="37dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تفاصيل الرحلة:"
                    android:textSize="16sp"
                    android:textColor="#49c2c5"
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:layout_gravity="right"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="11dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="14dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="البحر الأحمر، جدة"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="الموقع"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="الأحد 2019/02/12"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="التاريخ والوقت"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="200 ر.س"
                        android:textSize="13sp"
                        android:textColor="#0d912c"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="التكلفة"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="عدد المقاعد"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="معلومات مُنظم الرحلة:"
                    android:textSize="16sp"
                    android:textColor="#49c2c5"
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:layout_gravity="right"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="25dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/man_img"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginBottom="13dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="محمد عمر محمد "
                        android:gravity="right"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="مُحترف الغوص"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="17:00 pm"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="آخر رحلة"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="68"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="32"
                        android:layout_height="wrap_content"
                        android:text="تقييمه"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#908e8e"
                        android:fontFamily="@font/helveticaneuew23forsky_reg"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لقد قُمت بحجز هذه الرحلة، نتطلع للغوص معك!"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:textStyle="bold"
                    android:background="#0d912c"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="85dp"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</LinearLayout>