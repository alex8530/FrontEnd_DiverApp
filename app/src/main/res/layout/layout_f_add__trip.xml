<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".Fragments.Add_Trip">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:background="@drawable/tool_bar_bg"
        >
        <ImageView
            android:id="@+id/basket_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_basket"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_categories"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/basket_icon"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_back_btton_right"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingEnd="37dp"
            android:paddingStart="37dp"
            android:paddingTop="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضافة رحلة جديدة"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1c608d"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم الرحلة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/tripNameTF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="أدخل اسم الرحله هنا.."
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع الرحلة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                >
                <Spinner
                    android:id="@+id/tripType"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@drawable/spinner_bg_new1"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:textAlignment="textEnd"
                    android:entries="@array/tripType_arrays"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_marginStart="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موقع الرحلة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/locationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="ادخل اسم المدينة.."
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وصف الرحلة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/trip_description_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="ادخل وصف قصير عن الرحلة.."
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تبدأ بتاريخ:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <Button
                android:id="@+id/startDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إختر التاريخ"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:background="@drawable/btn_dark_blue_bg"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وتنتهي بتاريخ:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <Button
                android:id="@+id/endDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إختر التاريخ"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:background="@drawable/btn_dark_blue_bg"
                android:layout_marginTop="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عدد التذاكر:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/ticketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="أدخل العدد"
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/minmmumTicketNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أقل عدد للتذاكر:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/minmmumTicketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="أدخل أقل عدد للتذاكر"
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سعر التذكرة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#49c2c5"
                android:hint="ادخل السعر"
                android:textColorHint="#a3a3a3"
                android:paddingBottom="18dp"
                android:backgroundTint="#afafaf"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginEnd="-2dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صور للرحلة:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#a3a3a3"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/image4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_bg"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أرفق صورة"
                            android:textSize="11sp"
                            android:textColor="#a3a3a3"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/image3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_bg"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أرفق صورة"
                            android:textSize="11sp"
                            android:textColor="#a3a3a3"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_bg"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أرفق صورة"
                            android:textSize="11sp"
                            android:textColor="#a3a3a3"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/image1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_bg"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أرفق صورة"
                            android:textSize="11sp"
                            android:textColor="#a3a3a3"
                            android:fontFamily="@font/helveticaneuew23forsky_reg"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إرسال الرحلة"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_blue_grad_bg"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>