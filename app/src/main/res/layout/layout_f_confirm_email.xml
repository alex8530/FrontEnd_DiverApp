<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Fragments.ConfirmEmail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:background="@drawable/tool_bar_bg"
        >
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:src="@drawable/logo_internal_white"
            android:layout_marginEnd="37dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_basket"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:orientation="vertical"
        android:paddingTop="47dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تأكيد بريدك الإلكتروني"
            android:textSize="20sp"
            android:textColor="#1c608d"
            android:textStyle="bold"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#bfbfbf"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            android:text="@string/conf_email_tx"
            android:paddingStart="49dp"
            android:paddingEnd="49dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingStart="37dp"
            android:paddingEnd="37dp"
            android:layout_marginTop="50dp">
            <Button
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="تسجيل الخروج"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_red_bg"
                />
            <Button
                android:id="@+id/resendButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="إعادة إرسال"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_blue_grad_bg"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>