<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".Fragments.ForgotPassword">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/app_img"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:src="@drawable/logo_internal"
            android:layout_marginStart="37dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:src="@drawable/icon_right_arrow_blue"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:paddingEnd="37dp"
        android:paddingStart="37dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ادخل البريد الإلكتروني"
            android:textSize="21sp"
            android:textColor="#1c608d"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            />
        <EditText
            android:id="@+id/Email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_noline_bg"
            android:drawableRight="@drawable/icon_email"
            android:hint="البريد الإلكتروني"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColorHint="#bfbfbf"
            android:textColor="#49c2c5"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="19dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:drawablePadding="8dp"
            android:paddingEnd="14dp"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            />
        <Button
            android:id="@+id/resend_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_grad_bg"
            android:text="ارسال رابط اعادة التعيين"
            android:textColor="@drawable/button_text"
            android:textSize="18dp"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            />
    </LinearLayout>

</LinearLayout>