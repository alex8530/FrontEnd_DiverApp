<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="37dp"
         android:paddingEnd="37dp"
        android:layout_marginTop="-80dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_internal"
                />
        </LinearLayout>
        <!--<ImageView-->
        <!--android:id="@+id/logoImage"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="150dp"-->
        <!--app:srcCompat="@drawable/ic_assetlogo" />-->
        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/et_noline_bg"
            android:drawableRight="@drawable/icon_email"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="البريد الإلكتروني"
            android:inputType="textPersonName"
            android:paddingTop="15dp"
            android:paddingEnd="14dp"
            android:paddingBottom="15dp"
            android:textColor="#49c2c5"
            android:textColorHint="#bfbfbf"
            android:textSize="15sp"
            android:fontFamily="@font/helveticaneuew23forsky_reg"/>
        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_noline_bg"
            android:drawableRight="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="كلمة المرور"
            android:inputType="textPersonName"
            android:paddingTop="15dp"
            android:paddingEnd="14dp"
            android:paddingBottom="15dp"
            android:textColor="#49c2c5"
            android:textColorHint="#bfbfbf"
            android:textSize="15sp"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            />
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_grad_bg"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            android:text="تسجيل الدخول"
            android:textColor="@drawable/button_text"
            android:textSize="19dp" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            android:gravity="center"
            android:text="نسيت كلمة المرور"
            android:layout_marginTop="16dp"
            android:textColor="#a3a3a3"
            android:textSize="16sp"
            android:id="@+id/tvForgetPass"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            android:text="انضم إلينا"
            android:layout_marginEnd="5dp"
            android:textColor="#2980ba"
            android:textSize="15sp"
            android:id="@+id/tvJoinUs"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneuew23forsky_reg"
            android:text="ليس لديك حساب؟"
            android:textColor="#a3a3a3"
            android:textSize="15sp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>